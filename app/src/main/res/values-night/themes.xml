<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Reception" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/background_grey</item>

    </style>

    <style name="Theme.Reception" parent="Base.Theme.Reception" />


    <style name="LargeTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextSmallBlack">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="TextRegularBlack">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMediumBlack">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextButtonTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_orange</item>
    </style>

    <style name="TextRegularPrimary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Loader" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/primary</item>
        <item name="trackThickness">4dp</item>
    </style>

    <style name="TextToolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLargeBlack">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.Toolbar.Primary"
        parent="ThemeOverlay.Material3.Toolbar.Surface">

        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@android:color/white</item>

    </style>

    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/background_grey</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.Reception</item>
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Menu item text color -->
        <item name="android:textColorPrimary">@color/dark_orange</item>

        <!-- Optional: disabled menu color -->
        <item name="android:textColorSecondary">@color/dark_orange</item>
    </style>

</resources>